{
  "manifest_version": "0.3",
  "name": "auth",
  "version": "0.1.0",
  "description": "An MCP server with OAuth 2.0 authorization",
  "author": {
    "name": "Stephen Akinyemi",
    "email": "appcypher@outlook.com"
  },
  "server": {
    "type": "binary",
    "transport": "http",
    "entry_point": "target/release/auth",
    "mcp_config": {
      "command": "${__dirname}/target/release/auth",
      "args": [
        "--port=${system_config.port}"
      ],
      "url": "http://127.0.0.1:${system_config.port}/mcp"
    }
  },
  "tools": [
    {
      "name": "hello",
      "description": "Say hello"
    }
  ],
  "system_config": {
    "port": {
      "type": "port",
      "title": "Server Port",
      "description": "Port the HTTP server listens on",
      "required": true
    }
  },
  "compatibility": {
    "platforms": [
      "darwin"
    ]
  },
  "_meta": {
    "store.tool.mcpb": {
      "scripts": {
        "build": "cargo build --release"
      },
      "static_responses": {
        "tools/list": {
          "tools": [
            {
              "name": "hello",
              "description": "Say hello",
              "input_schema": {
                "type": "object",
                "properties": {},
                "required": []
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "text"
                        },
                        "text": {
                          "type": "string",
                          "description": "A greeting message"
                        }
                      },
                      "required": ["type", "text"]
                    }
                  }
                },
                "required": ["content"]
              }
            }
          ]
        }
      }
    }
  }
}
