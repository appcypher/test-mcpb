{
  "manifest_version": "0.3",
  "name": "hello",
  "version": "0.1.0",
  "description": "An MCP server",
  "author": {
    "name": "Stephen Akinyemi"
  },
  "server": {
    "type": "binary",
    "entry_point": "target/release/hello",
    "mcp_config": {
      "command": "${__dirname}/target/release/hello",
      "env": {
        "USERNAME": "${user_config.username}"
      }
    }
  },
  "tools": [
    {
      "name": "hello",
      "description": "Say hello"
    }
  ],
  "user_config": {
    "username": {
      "type": "string",
      "title": "Username",
      "description": "Your name for personalized greetings",
      "required": true
    }
  },
  "compatibility": {
    "platforms": [
      "darwin"
    ]
  },
  "_meta": {
    "store.tool.mcpb": {
      "scripts": {
        "build": "cargo build --release"
      },
      "static_responses": {
        "tools/list": {
          "tools": [
            {
              "name": "hello",
              "description": "Say hello",
              "input_schema": {
                "type": "object",
                "properties": {},
                "required": []
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "text"
                        },
                        "text": {
                          "type": "string",
                          "description": "A personalized greeting message"
                        }
                      },
                      "required": ["type", "text"]
                    }
                  }
                },
                "required": ["content"]
              }
            }
          ]
        }
      }
    }
  }
}
