{
  "manifest_version": "0.3",
  "name": "http",
  "version": "0.1.0",
  "description": "A simple HTTP MCP server without authentication",
  "icon": "./icon.png",
  "author": {
    "name": "Stephen Akinyemi",
    "email": "appcypher@outlook.com"
  },
  "license": "MIT",
  "server": {
    "type": "binary",
    "transport": "http",
    "entry_point": "target/release/http",
    "mcp_config": {
      "command": "${__dirname}/target/release/http",
      "args": [
        "--host=${user_config.host}",
        "--port=${system_config.port}"
      ],
      "url": "http://${user_config.host}:${system_config.port}/mcp"
    }
  },
  "tools": [
    {
      "name": "hello",
      "description": "Say hello"
    }
  ],
  "user_config": {
    "host": {
      "type": "string",
      "title": "Bind Address",
      "description": "Network interface to bind to",
      "default": "127.0.0.1"
    }
  },
  "system_config": {
    "port": {
      "type": "port",
      "title": "Server Port",
      "description": "Port for the MCP HTTP endpoint"
    }
  },
  "compatibility": {
    "platforms": [
      "darwin"
    ]
  },
  "_meta": {
    "store.tool.mcpb": {
      "scripts": {
        "build": "cargo build --release"
      },
      "static_responses": {
        "tools/list": {
          "tools": [
            {
              "name": "hello",
              "description": "Say hello",
              "input_schema": {
                "type": "object",
                "properties": {},
                "required": []
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "text"
                        },
                        "text": {
                          "type": "string",
                          "description": "A greeting message from the HTTP server"
                        }
                      },
                      "required": ["type", "text"]
                    }
                  }
                },
                "required": ["content"]
              }
            }
          ]
        }
      }
    }
  }
}
