{
  "manifest_version": "0.3",
  "name": "sensitive",
  "version": "0.1.0",
  "description": "An MCP server with sensitive user configuration",
  "author": {
    "name": "Stephen Akinyemi",
    "email": "appcypher@outlook.com"
  },
  "server": {
    "type": "binary",
    "entry_point": "target/release/sensitive",
    "mcp_config": {
      "command": "${__dirname}/target/release/sensitive",
      "env": {
        "API_KEY": "${user_config.api_key}"
      }
    }
  },
  "tools": [
    {
      "name": "check_auth",
      "description": "Check if API key is configured"
    }
  ],
  "user_config": {
    "api_key": {
      "type": "string",
      "title": "API Key",
      "description": "Your API key for authentication",
      "required": true,
      "sensitive": true
    }
  },
  "compatibility": {
    "platforms": [
      "darwin"
    ]
  },
  "_meta": {
    "store.tool.mcpb": {
      "scripts": {
        "build": "cargo build --release"
      },
      "static_responses": {
        "tools/list": {
          "tools": [
            {
              "name": "check_auth",
              "description": "Check if API key is configured",
              "input_schema": {
                "type": "object",
                "properties": {},
                "required": []
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "text"
                        },
                        "text": {
                          "type": "string",
                          "description": "Status message indicating whether the API key is configured"
                        }
                      },
                      "required": ["type", "text"]
                    }
                  }
                },
                "required": ["content"]
              }
            }
          ]
        }
      }
    }
  }
}
